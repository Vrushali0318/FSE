
@{
    ViewBag.Title = "Add Task";
}


<table><tr><td height="10px"></td></tr></table>

<table cellpadding="4" cellspacing="4" width="70%" align="center" style="background-color: skyblue;
border:solid 2px red; padding-top:20px;">
    <tr>
        <td colspan="3" style="background-color:gray; font-size:18pt;
font-weight:bold; height:30px; text-align:center;">
            Add Task
        </td>
    </tr>
    <tr>
        <td style="text-align:right;">Task</td>
        <td><input type="text" ng-model="Task_ID" readonly />  </td>
    </tr>
    <tr>
        <td style="text-align:right;">Parent</td>
        <td><input type="text" ng-model="Parent_Task" />  </td>
    </tr>
    <tr>
        <td style="text-align:right;">Priority</td>
        <td><input type="range" ng-model="Priority" min="0" max="30" />  </td>
    </tr>
    <tr>
        <td style="text-align:right;" class="control-label">Start</td>
        <td><input type="date" ng-model="Start_Date" class="form-control" />  </td>
    </tr>
    <tr>
        <td style="text-align:right;" class="control-label">End</td>
        <td><input type="date" ng-model="End_Date" class="form-control" ng-change='checkErr(Start_Date,End_Date,Parent_Task,Priority)' />  </td>
    </tr>


    <tr>
        <td></td>
        <td>
            <input type="button" value="Save" ng-click="checkErr(Start_Date,End_Date,Parent_Task,Priority) && save()" ng-c= />
            <input type="button" value="Reset" data-ng-click="reset()" />
        </td>
    </tr>

</table>
<span class="label label-danger">{{errMessage}}</span>

